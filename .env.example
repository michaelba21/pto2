# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/neurostack

# Environment
NODE_ENV=development

# Optional: For production deployment
# PORT=5000

# Email Configuration (REQUIRED for contact form to send emails)
# For Yahoo Mail - Follow these steps:
# 1. Go to Yahoo Account Security settings
# 2. Turn on 2-step verification
# 3. Generate an App Password for "Mail"
# 4. Use your Yahoo email and the App Password below

SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yahoo.com
SMTP_PASS=your-app-password-here

# Alternative SMTP providers:
# For Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false

# For Outlook/Hotmail:
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_SECURE=false